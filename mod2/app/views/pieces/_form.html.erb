<!DOCTYPE html>
<html>
    <body>
        <div class="container">
            <%= form_for(@piece) do |f| %>
            <h4>Title:</h4>
            <%= f.text_field :name %><br /><br />
        </div>
        <div class="container">
            <h4>Color:</h4>
            <%= f.text_field :color %><br /><br />
        </div>
        <div class="container">
            <h4>Image URL:</h4>
            <%= f.text_field :image %><br /><br />
        </div>
        <div class="container">
            <h4>Clothing Type:</h4>
            <%= f.collection_select :category_id, @categories, :id, :name %><br /><br />
        </div>
        <div class="container">                          
            <%= f.submit "SUBMIT", class: "btn btn-primary"%>
            <% end %>
        </div>
    </body>
</html>