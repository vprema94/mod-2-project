<!DOCTYPE html>
<html>
    <head>
        <div class="container">
            <h2> <%= @outfit.name %> </h2>
        </div>
    </head>

    <body>
        <div class="container">
            <h4> Your Rating: <%= @outfit.rating %>/5</h4>
            <h4> Occassion: <%= @outfit.occasion.name %></h4>
            <h4> Items: </h4>
                <% @pieces.each do |piece| %>
                <%= image_tag(piece.image, height: 200) %>
                <% end %>
            <br><br>    
            <%= link_to 'Edit', edit_outfit_path(@outfit), :class => "btn btn-primary" %>
        </div>
    </body>
</html>